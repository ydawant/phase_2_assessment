<h1> Edit Your Event </h1>

<form action="/event/edit" method="post" id="edit">
  <div>
    <input type="hidden" name='event_id' value='<%=@event.id%>'>
  </div>
  <div>
    <label for="event[name]">Name of Event:</label>
    <input type="text" name="event[name]" value='<%=@event.name%>'>
  </div>
  <div>
    <label for="event[location]">Location:</label>
    <input type="text" name="event[location]" value='<%=@event.location%>'>
  </div>
   <div>
    <label for="event[starts_at]">Starts At:</label>
    <input type="datetime" name="event[starts_at]" value='<%=@event.starts_at%>'>
  </div>
   <div>
    <label for="event[ends_at]">Ends At:</label>
    <input type="datetime" name="event[ends_at]" value='<%=@event.ends_at%>'>
  </div>
  <button type="submit">Submit</button>
</form>
